{
  "name": "esday-demo-angular",
  "version": "0.5.0-3",
  "description": "Minimal demo for using the esday library in a basic Angular app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BePo65/esday-demo-angular.git"
  },
  "keywords": [
    "esday",
    "demo",
    "angular",
    "date",
    "time",
    "immutable",
    "moment",
    "dayjs",
    "format"
  ],
  "author": "BePo65",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BePo65/esday-demo-angular/issues"
  },
  "homepage": "https://github.com/BePo65/esday-demo-angular#readme",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:watch": "ng build --watch --configuration development",
    "build:ghpages": "npm run build:prod -- --base-href=/esday-demo-angular/ && del-cli ghpages && cpy \"dist/esday-demo-angular/browser/**\" ghpages  && cpy \"dist/esday-demo-angular/3rdpartylicenses.txt\" ghpages --flat",
    "test": "ng test",
    "test:run": "ng test --watch=false",
    "test:coverage": "ng test --watch=false --code-coverage=true",
    "format": "prettier --write \"src/**/*.{ts,html,scss}\"",
    "lint": "ng lint"
  },
  "private": false,
  "dependencies": {
    "@angular/common": "^20.1.6",
    "@angular/compiler": "^20.1.6",
    "@angular/core": "^20.1.6",
    "@angular/forms": "^20.1.6",
    "@angular/platform-browser": "^20.1.6",
    "@angular/router": "^20.1.6",
    "esday": "^0.5.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.6",
    "@vitest/coverage-v8": "^3.2.4",
    "angular-eslint": "20.1.1",
    "cpy-cli": "^5.0.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.39.0",
    "vitest": "^3.2.4"
  }
}
